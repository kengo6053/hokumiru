<h2>トピック詳細</h2>

<div class="topic">
  <p><%= @topic.title %></p>
  <p><%= @topic.body %></p>
  <p><%= @topic.created_at %></p>
</div>

<%= link_to "編集する", edit_topic_path(@topic.id) %>

<h2><%= @topic.title %></h2>
<% @comments.each_with_index do |comment , idx| %>
  <p>
    <%= idx + 1 %>. <%= comment.name %> : <%= comment.body %>        <%= @topic.created_at %>
  </p>
<% end %>

<h4>新規書き込み</h4>
<%= form_for @newcomment, :url => comment_create_path do |f| %>
  <p>お名前</p>
  <p><%= f.text_field :name %></p>
  <p>本文</p>
  <p><%= f.text_area :body %></p>
  <p><%= @topic.created_at %></p>
  <%= f.hidden_field :topic_id %>
  <%= f.submit %>
<% end %>