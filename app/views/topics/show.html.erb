<h3>トピック詳細</h3>

<div class="memo-topics-container">
  <div class="topics-container">
    <h2><%= @topic.title %>
    <%= link_to "https://twitter.com/share?url=#{request.url}", target: '_blank' do %>
      <%= image_tag 'Twitter.svg', class:"logo-image" %>
    <% end %>
    <%= link_to "https://www.facebook.com/share?url=#{request.url}", target: '_blank' do %>
      <%= image_tag 'Facebook.svg', class:"logo-image" %>
    <% end %>
    </h2>


    <% @comments.each_with_index do |comment , idx| %>
      <div class="main-box">
      <p>
        <%= idx + 1 %>. <%= comment.name %> : <%= comment.body %>        <%= @topic.created_at %>
      </p>

      <p>
        <strong>Image:</strong>
        <%= image_tag @comment.image if @comment.image? %>
      </p>

      </div>
    <% end %>
  </div>

  <div class="topics-container">
    <h4>新規書き込み</h4>
    <%= form_for @newcomment, :url => comment_create_path do |f| %>
      <p>お名前</p>
      <p><%= f.text_area :name, :cols => 20, :rows => 2 %></p>
      <p>本文</p>
      <p><%= f.text_area :body, :cols => 50, :rows => 4 %></p>
      
      <%= f.label :画像 %><br />
      <%= f.file_field :image, class: "image" %>
      
      <p><%= @newcomment.created_at %></p>
      <%= f.hidden_field :topic_id %>
      <%= f.submit "新規コメント投稿", class: 'button' %>
    <% end %>
  </div>
</div>
