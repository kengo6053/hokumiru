<%= stylesheet_link_tag 'new', :media => "all" %>

<h3>新規トピック</h3>
<div class="new-container">
  <%= form_for @topic do |f| %>
    <div class="name">
      <%= f.label :name %>
      <%= f.text_field :name, :size => 140 %>
    </div>

    <div class="title">
      <%= f.label :title %>
      <%= f.text_field :title, :size => 140 %>
    </div>


    <div class="body">
      <%= f.label :body %>
      <%= f.text_field :body, :size => 140 %>
    </div>

    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <%= f.submit "投稿する" %>
  
  <% end %>
</div>
